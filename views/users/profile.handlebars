<h1>Profile</h1>
<main>
    <div id="errorDiv" {{#unless error}}hidden{{/unless}}>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
    </div>
    <form id="editForm">
        <label for="firstName">First Name:</label>
        <input id="firstName" name="firstName" type="text" value="{{user.firstName}}"></input>
        <label for="lastName">Last Name:</label>
        <input id="lastName" name="lastName" type="text" value="{{user.lastName}}"></input>
        <label for="mobileNumber">Mobile Phone Number:</label>
        <input id="mobileNumber" name="mobileNumber" type="text" value="{{user.phone.mobile}}"></input>
        <label for="homeNumber">Home Phone Number:</label>
        <input id="homeNumber" name="homeNumber" type="text" value="{{user.phone.home}}"></input>
        <label for="workNumber">Work Phone Number:</label>
        <input id="workNumber" name="workNumber" type="text" value="{{user.phone.work}}"></input>
        <button type="submit" id="updateProfileButton">Update Profile</button>
    </form>
    <button id="editProfileButton">Edit Profile</button>
    <button id="cancelEditButton">Cancel</button>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/public/js/validationFunctions.js"></script>
<script src="/public/js/profile.js"></script>