<link rel="stylesheet" href="/public/css/landing.css" />
<link rel="stylesheet" href="/public/css/dashboard.css" />

<div id="dashboardBackground" class="back">
    <div id='dashboardHeader'>
        <img alt="task track logo" id="headerLogo" src="/public/img/header_logo.png"
            class="marginLeft12 marginRight12 marginTop12 marginBottom12">
        <div class="dashboardNav_V_Divider marginLeft12 marginRight12"></div>

        <a href="/dashboard" class='headerLink marginLeft12'>Dashboard</a>
        <div class="dashboardNav_H_Divider marginLeft12 marginRight12"></div>

        <a href="/tasks/new" class='headerLink'>Create Task</a>
        <div class="dashboardNav_H_Divider marginLeft12 marginRight12"></div>

        <a href="/archive" class='headerLink'>Archive</a>
        <div class="dashboardNav_H_Divider marginLeft12 marginRight12"></div>

        <a href="/users/profile" class='headerLink'>Profile</a>
    </div>

<main class="profile">
    <h1>Profile</h1>
    <div id="errorDiv" {{#unless error}}hidden{{/unless}}>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
    </div>
    <form id="editForm">
        <div>
            <label for="firstName">First Name:</label>
            <input class="signupInput" id="firstName" name="firstName" type="text" value="{{user.firstName}}"></input>
            <label for="lastName">Last Name:</label>
            <input class="signupInput" id="lastName" name="lastName" type="text" value="{{user.lastName}}"></input>
        </div>
        <div>
            <label for="mobileNumber">Mobile Phone Number:</label>
            <input class="signupInput" id="mobileNumber" name="mobileNumber" type="text" value="{{user.phone.mobile}}"></input>
        </div>
        <div>
            <label for="homeNumber">Home Phone Number:</label>
            <input class="signupInput" id="homeNumber" name="homeNumber" type="text" value="{{user.phone.home}}"></input>
        </div>
        <div>
            <label for="workNumber">Work Phone Number:</label>
            <input class="signupInput" id="workNumber" name="workNumber" type="text" value="{{user.phone.work}}"></input>
        </div>
        <button class="loginProfileButton" type="submit" id="updateProfileButton">Update Profile</button>
    </form>
    <button class="loginProfileButton" id="editProfileButton">Edit Profile</button>
    <button class="loginProfileButton" id="cancelEditButton">Cancel</button>
    <form action="/users/logout">
    <button class="loginProfileButton" id="logoutButton">Logout</button>
    </form>
  
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
