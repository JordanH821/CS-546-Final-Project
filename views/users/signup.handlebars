<link rel="stylesheet" href="/public/css/landing.css" />

<main>
    <img alt="task track logo" id="headerLogo" src="/public/img/header_logo_dark.png">
    <h1>Sign Up</h1>
    <div id="errorDiv" {{#unless error}} hidden{{/unless}}> {{#if error}} <p>{{error}}</p>
        {{/if}}
    </div>
    <form class="alignLeft" action="/users/signup" method="POST" id="signUpForm">
        <div>
            <label for="firstName">First Name:</label>
            <input class="signupInput" id="firstName" name="firstName" type="text" value="{{user.firstName}}">
            <label for="lastName">Last Name:</label>
            <input class="signupInput" id="lastName" name="lastName" type="text" value="{{user.lastName}}">
        </div>
        <div>
            <label for="email">Email Address:</label>
            <input class="signupInput" id="email" name="email" type="email" value="{{user.email}}">
        </div>
        <label for="password">Password:</label>
        <input class="signupInput" id="password" name="password" type="password" value="{{user.password}}">
        <div>
            <label for="mobileNumber">Mobile Phone Number:</label>
            <input class="signupInput" id="mobileNumber" name="mobileNumber" type="text" value="{{user.mobileNumber}}">
        </div>
        <div>
            <label for="homeNumber">Home Phone Number:</label>
            <input class="signupInput" id="homeNumber" name="homeNumber" type="text" value="{{user.homeNumber}}">
        </div>
        <label for="workNumber">Work Phone Number:</label>
        <input class="signupInput" id="workNumber" name="workNumber" type="text" value="{{user.workNumber}}">
        <button class="loginProfileButton" type="submit">Create Account</button>
    </form>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
<script src="https://rawgit.com/leizongmin/js-xss/master/dist/xss.js"></script>
<script src="/public/js/validationFunctions.js"></script>
<script src="/public/js/signUpValidation.js"></script>