<link rel="stylesheet" href="/public/css/landing.css" />

<main>
    <img class="bottomImg" id="headerLogo" src="/public/img/header_logo_dark.png">
    <div id="errorDiv" {{#unless error}}hidden{{/unless}}>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
    </div>
    <form action="/users/login" method="POST" id="loginForm">
        <label for="email">Email Address:</label>
        <input id="email" name="email" type="email" value="{{user.email}}"></input>
        <label for="password">Password:</label>
        <input id="password" name="password" type="password" value="{{user.password}}"></input>
        <button class="loginProfileButton" type="submit">Login</button>
    </form>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/public/js/validationFunctions.js"></script>
<script src="/public/js/loginValidation.js"></script>